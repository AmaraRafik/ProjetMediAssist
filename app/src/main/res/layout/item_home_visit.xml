<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_outline_medical"
    android:padding="14dp"
    android:layout_marginBottom="12dp">

    <TextView
        android:id="@+id/visit_patient_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nom du patient"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@color/medical_blue" />

    <TextView
        android:id="@+id/visit_hour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Heure : 15:00"
        android:textSize="15sp"
        android:layout_marginTop="2dp" />

    <TextView
        android:id="@+id/visit_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Adresse : 12 Rue du Bien, 75012 Paris, France"
        android:textSize="15sp"
        android:layout_marginTop="2dp" />

    <TextView
        android:id="@+id/visit_detail_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Voir dÃ©tail RDV"
        android:textColor="@color/medical_blue"
        android:textStyle="bold"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:clickable="true"
        android:focusable="true"
        android:layout_gravity="end" />
</LinearLayout>
