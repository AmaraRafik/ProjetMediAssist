<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:padding="24dp"
    app:ignore="NamespaceTypo">

    <!-- Titre -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Consultation"
        android:textStyle="bold"
        android:textSize="24sp"
        android:layout_marginBottom="32dp"
        android:textColor="@android:color/black" />

    <!-- CardView pour nom du patient + micro -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginBottom="28dp"
        card_view:cardCornerRadius="18dp"
        card_view:cardElevation="6dp"
        android:background="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingStart="18dp"
            android:paddingEnd="10dp"
            android:paddingBottom="6dp">

            <TextView
                android:id="@+id/patientNameText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Nom du patient"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@android:color/black" />

            <ImageButton
                android:id="@+id/microButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_microphone"
                android:contentDescription="Micro"
                app:tint="@color/medical_blue"
                android:padding="6dp"
                android:layout_gravity="center_vertical"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Champ symptômes (agrandi) -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Symptômes observés"
        android:textSize="15sp"
        android:textColor="#666"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"/>

    <EditText
        android:id="@+id/symptomsEditText"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:hint="Toux, fièvre..."
        android:background="@drawable/edittext_background"
        android:textSize="16sp"
        android:padding="14dp"
        android:layout_marginBottom="18dp"
        android:inputType="textMultiLine"/>

    <!-- CardView Diagnostic -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="84dp"
        card_view:cardCornerRadius="14dp"
        card_view:cardElevation="3dp"
        android:layout_marginBottom="36dp"
        android:background="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="14dp"
            android:background="@drawable/bg_card_border"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/diagnosticTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Diagnostic potentiel:"
                android:textStyle="bold"
                android:textColor="@color/medical_blue"
                android:textSize="16sp"
                android:layout_marginBottom="3dp"/>

            <TextView
                android:id="@+id/diagnosticText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bronchite virale"
                android:textColor="#333"
                android:textSize="15sp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Bouton -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/generatePrescriptionBtn"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="Générer ordonnance"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:backgroundTint="@color/medical_blue"
        android:layout_marginTop="12dp"
        app:cornerRadius="18dp"/>

</LinearLayout>
